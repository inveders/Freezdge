<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/greyoftop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGrey"

            app:layout_constraintEnd_toEndOf="@id/middleGuideline"
            app:layout_constraintStart_toStartOf="@id/middleGuideline"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/firstGuideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/secondGuideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middleGuideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.42" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_large_margin"
            android:layout_marginBottom="@dimen/default_large_margin"
            android:background="@drawable/background_top_social_media"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_large_margin"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/description_image"
                app:srcCompat="@drawable/ic_anon_user_48dp" />

            <TextView
                android:id="@+id/profile_activity_app_mode_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="@dimen/default_large_margin"
                android:padding="@dimen/default_margin"
                android:text="@string/social_media_description"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_top_social_media"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
            app:layout_constraintTop_toBottomOf="@id/linearlayout">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/firstbisGuideline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middlebisGuideline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/secondbisGuideline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuideline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottombisGuideline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1" />

            <View
                android:id="@+id/middle_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="@id/bottombisGuideline"
                app:layout_constraintEnd_toEndOf="@id/middlebisGuideline"
                app:layout_constraintStart_toStartOf="@id/middlebisGuideline"
                app:layout_constraintTop_toTopOf="@id/topGuideline" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_extra_large_margin"
                android:layout_marginEnd="@dimen/default_extra_large_margin"
                app:layout_constraintStart_toStartOf="@id/firstbisGuideline"
                app:layout_constraintEnd_toEndOf="@id/middlebisGuideline"
               app:layout_constraintTop_toTopOf="@id/topGuideline"
                app:layout_constraintBottom_toBottomOf="@id/bottombisGuideline"
                >



                <ImageView
                    android:id="@+id/image_photo_post"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/description_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_photo_post" />

                <TextView
                    android:id="@+id/title_photo_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/social_media_photo_post"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/image_photo_post"
                    app:layout_constraintStart_toEndOf="@id/image_photo_post"
                    app:layout_constraintTop_toTopOf="@id/image_photo_post" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_extra_large_margin"
                android:layout_marginEnd="@dimen/default_extra_large_margin"
                app:layout_constraintStart_toStartOf="@id/middlebisGuideline"
                app:layout_constraintEnd_toEndOf="@id/secondbisGuideline"
                app:layout_constraintTop_toTopOf="@id/topGuideline"
                app:layout_constraintBottom_toBottomOf="@id/bottombisGuideline">

                <ImageView
                    android:id="@+id/image_tips_post"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/description_image"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_tip_post" />

                <TextView
                    android:id="@+id/title_tips_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/social_media_tips_post"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/image_tips_post"
                    app:layout_constraintStart_toEndOf="@id/image_tips_post"
                    app:layout_constraintTop_toTopOf="@id/image_tips_post" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint" />

        <TextView
            android:id="@+id/no_post_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/social_media_no_post"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

